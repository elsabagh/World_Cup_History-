<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardMaxElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textHomeName"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Brazil"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_Home_Goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textHomeName"
            app:layout_constraintStart_toStartOf="@+id/textHomeName"
            app:layout_constraintTop_toBottomOf="@+id/textHomeName" />

        <TextView
            android:id="@+id/text_Away_Goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/text_Between_Result"
            app:layout_constraintStart_toStartOf="@+id/text_Between_Result"
            app:layout_constraintTop_toBottomOf="@+id/text_Between_Result" />

        <TextView
            android:id="@+id/textAwayName"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="France"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/text_Away_Goals"
            app:layout_constraintStart_toStartOf="@+id/text_Away_Goals"
            app:layout_constraintTop_toBottomOf="@+id/text_Away_Goals" />

        <TextView
            android:id="@+id/text_Between_Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/text_Home_Goals"
            app:layout_constraintStart_toStartOf="@+id/text_Home_Goals"
            app:layout_constraintTop_toBottomOf="@+id/text_Home_Goals" />

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="2010"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textAwayName"
            app:layout_constraintStart_toStartOf="@+id/textAwayName"
            app:layout_constraintTop_toBottomOf="@+id/textAwayName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>